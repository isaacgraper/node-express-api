{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "ESNext",                  
    "rootDir": "./src",                  
    "outDir": "./dist/out-tsc",                  
    "esModuleInterop": true,             
    "moduleResolution": "node",          
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
